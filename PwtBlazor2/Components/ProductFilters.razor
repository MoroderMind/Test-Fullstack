<div class="mb-3">
    <div class="btn-group me-2">
        <button class="btn btn-outline-primary" @onclick="OnAllProducts">
            All Products
        </button>
        <button class="btn btn-outline-primary" @onclick="OnInStockProducts">
            In Stock Only
        </button>
    </div>
    <div class="btn-group">
        <button class="btn btn-outline-primary" @onclick="() => OnSortByPrice.InvokeAsync(true)">
            Price: Low to High
        </button>
        <button class="btn btn-outline-primary" @onclick="() => OnSortByPrice.InvokeAsync(false)">
            Price: High to Low
        </button>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnAllProducts { get; set; }

    [Parameter]
    public EventCallback OnInStockProducts { get; set; }

    [Parameter]
    public EventCallback<bool> OnSortByPrice { get; set; }
} 